<UserControl x:Class="WPF_TravelApp.Views.TicketView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TravelApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button FontSize="25" Content="⬅" Command="{Binding BackCommand}"/>
        </Grid>
        <UniformGrid Grid.Row="1">
            <Image Width="300" Source="/WPF_TravelApp;component/Images/ticket.jpg"/>
            <Image Width="300" Source="/WPF_TravelApp;component/Images/ticket.jpg"/>
            <Image Width="300" Source="/WPF_TravelApp;component/Images/ticket.jpg"/>
            <Image Width="300" Source="/WPF_TravelApp;component/Images/ticket.jpg"/>
        </UniformGrid>
    </Grid>
</UserControl>
    